<h1><strong><%= @cocktail.name %></strong></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> : <%=dose.description%></li>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% end %>
</ul>

<%= link_to "Back to all cocktails", cocktails_path %>
<%= link_to "Edit", edit_cocktail_path(@cocktail) %>
<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>


