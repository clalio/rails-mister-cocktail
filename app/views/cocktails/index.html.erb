<h1 class="text-center">Cocktails list</h1>

<div>
  <p class="text-center" >
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
          <h2 class="text-center"><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

