<h1 class="text-center">Add a dose for <%= @cocktail.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f|%>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Add the dose", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>

